{
  "compilerOptions": {
    "types": [
      "laravel-mix"
    ],
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "es6",
      "esnext",
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
